{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES6",
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
		"resolveJsonModule": true
    },
    "include": ["src/*"]
}
